      <table class="table table-bordered table-striped">

        <thead>
          <tr class="table-primary">
            <th class="col-4" scope="col">Curso</th>
            <th class="col-4" scope="col">Descripción</th>
            <th class="col-2" scope="col">Progreso</th>
            <th class="col-2 text-center" scope="col">ACCIÓN</th>
          </tr>
        </thead>

        <tbody>
          <% @enrollments.each do |enrollment| %>
            <%= render enrollment %>
          <% end %>
        </tbody>

      </table>
    </div>
